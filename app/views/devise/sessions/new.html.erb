<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg">
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <h2 class="text-primary font-weight-bold">Admin</h2>
        </div>

        <h5 class="text-center text-muted font-weight-normal mb-4">Acesso ao Painel Administrativo</h5>

        <% if alert %>
          <div class="alert alert-danger text-center">
            <%= alert %>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'form-label font-weight-bold' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'form-label font-weight-bold' %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <%= f.submit 'Entrar', class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
